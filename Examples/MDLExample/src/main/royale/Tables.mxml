<mdl:TabBarPanel xmlns:fx="http://ns.adobe.com/mxml/2009"
                 xmlns:js="library://ns.apache.org/royale/basic"
                 xmlns:mdl="library://ns.apache.org/royale/mdl"
                 xmlns="http://www.w3.org/1999/xhtml"
                 xmlns:models="models.*" xmlns:components="components.*" 
                 xmlns:html="library://ns.apache.org/royale/html">
    
    <mdl:model>
        <models:TablesModel/>
	</mdl:model>

	<mdl:Grid percentWidth="100">
		<mdl:GridCell column="12">
			<mdl:Card percentWidth="100">
				<mdl:CardTitle>
					<mdl:CardTitleText text="Data table"/>
				</mdl:CardTitle>
			    <mdl:Grid percentWidth="100" percentHeight="100">
			  		<mdl:GridCell column="12">
						  <mdl:Table shadow="2" className="customTableRowItemRenderer" selectable="true">
			                <mdl:columns>
			                    <mdl:TableColumn headerText="Material"/>
			                    <mdl:TableColumn headerText="Quantity">
			                        <mdl:beads>
			                            <mdl:TableNumericColumnEnable />
			                        </mdl:beads>
			                    </mdl:TableColumn>
			                    <mdl:TableColumn headerText="Unit price">
			                        <mdl:beads>
			                            <mdl:TableNumericColumnEnable />
			                        </mdl:beads>
			                    </mdl:TableColumn>
			                </mdl:columns>
			                <mdl:beads>
			                    <js:ConstantBinding
			                        sourceID="model"
			                        sourcePropertyName="materials"
			                        destinationPropertyName="dataProvider" />
			                </mdl:beads>
			            </mdl:Table>
					</mdl:GridCell>
					<mdl:GridCell column="6">
						<components:SnippetBox languages="xml" percentWidth="100" percentHeight="100"
											   link="https://raw.githubusercontent.com/piotrzarzycki21/TranspiledActionScript/snippets/Snippets/MDLExample/MXML/Tables/DataTable.mxml"/>
					</mdl:GridCell>
					<mdl:GridCell column="6">
						<components:SnippetBox languages="html" percentWidth="100" percentHeight="100"
											   link="https://raw.githubusercontent.com/piotrzarzycki21/TranspiledActionScript/snippets/Snippets/MDLExample/HTML/Tables/DataTable.html"/>
					</mdl:GridCell>
			    </mdl:Grid>
			</mdl:Card>
		</mdl:GridCell>
		<mdl:GridCell column="12">
			<mdl:Card percentWidth="100">
				<mdl:CardTitle>
					<mdl:CardTitleText text="Single selection Table"/>
				</mdl:CardTitle>
			    <mdl:Grid percentWidth="100" percentHeight="100">
			  		<mdl:GridCell column="12">
						  <mdl:Table shadow="2" className="singleSelectionTable">
			                <mdl:columns>
			                    <mdl:TableColumn headerText="Material"/>
			                    <mdl:TableColumn headerText="Quantity">
			                        <mdl:beads>
			                            <mdl:TableNumericColumnEnable />
			                        </mdl:beads>
			                    </mdl:TableColumn>
			                    <mdl:TableColumn headerText="Unit price">
			                        <mdl:beads>
			                            <mdl:TableNumericColumnEnable />
			                        </mdl:beads>
			                    </mdl:TableColumn>
			                </mdl:columns>
			                <mdl:beads>
			                    <js:ConstantBinding
			                        sourceID="model"
			                        sourcePropertyName="materials"
			                        destinationPropertyName="dataProvider" />
			                </mdl:beads>
			            </mdl:Table>
					</mdl:GridCell>
					<mdl:GridCell column="6">
						<components:SnippetBox languages="xml" percentWidth="100" percentHeight="100"
											   link="https://raw.githubusercontent.com/piotrzarzycki21/TranspiledActionScript/snippets/Snippets/MDLExample/MXML/Tables/SingleSelectionTable.mxml"/>
					</mdl:GridCell>
					<mdl:GridCell column="6">
						<html:H3 text="No equivalent in pure MDL library."/>
					</mdl:GridCell>
			    </mdl:Grid>
			</mdl:Card>
		</mdl:GridCell>
		<mdl:GridCell column="12">
			<mdl:Card percentWidth="100">
				<mdl:CardTitle>
					<mdl:CardTitleText text="CSS class and item renderer for single selection Table"/>
				</mdl:CardTitle>
			    <mdl:Grid percentWidth="100" percentHeight="100">
					<mdl:GridCell column="8">
						<components:SnippetBox languages="xml" percentWidth="100" percentHeight="100"
											   link="https://raw.githubusercontent.com/piotrzarzycki21/TranspiledActionScript/snippets/Snippets/MDLExample/MXML/Tables/SingleSelectionTableCssClass.mxml"/>
					</mdl:GridCell>
			    </mdl:Grid>
			</mdl:Card>
		</mdl:GridCell>
	</mdl:Grid>
</mdl:TabBarPanel>
