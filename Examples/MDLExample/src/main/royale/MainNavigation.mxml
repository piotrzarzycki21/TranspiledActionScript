<mdl:NavigationLayout xmlns:fx="http://ns.adobe.com/mxml/2009"
                      xmlns:js="library://ns.apache.org/royale/basic"
                      xmlns:local="*"
                      xmlns:mdl="library://ns.apache.org/royale/mdl"
                      xmlns="http://www.w3.org/1999/xhtml" xmlns:models="models.*"
                      fixedDrawer="true" fixedHeader="true">

    <mdl:model>
        <models:MainNavigationModel id="mainNavigationModel"/>
    </mdl:model>

    <mdl:Header>
        <mdl:HeaderRow>
            <mdl:LayoutTitle text="Apache Royale MDL"/>
        </mdl:HeaderRow>
    </mdl:Header>
	<mdl:Drawer>
		<mdl:style>
			<js:AllCSSStyles overflowY="unset" height="auto" maxHeight="unset"/>
		</mdl:style>
		<mdl:LayoutTitle text="Apache Royale MDL">
			<mdl:style>
				<js:SimpleCSSStyles fontSize="16" fontWeight="bold"/>
			</mdl:style>
		</mdl:LayoutTitle>
		<mdl:Navigation className="mainMenuNavigation" change="onNavigationChange(event)">
			<mdl:beads>
                    <js:ConstantBinding
                        sourceID="model"
                        sourcePropertyName="mainNavigation"
                        destinationPropertyName="dataProvider" />
            </mdl:beads>
		</mdl:Navigation>
	</mdl:Drawer>
    <mdl:NavigationLayoutContent id="content">
 		<local:Badges id="badges" isActive="true"/>
		<local:Buttons id="buttons" />
		<local:Cards id="cards"/>
		<local:Chips id="chips"/>
		<local:Dialogs id="dialogs"/>
		<local:Layout id="layouts"/>
		<local:Lists id="list"/>
		<local:Loading id="loading"/>
		<local:Menus id="menus"/>
		<local:Sliders id="sliders"/>
		<local:Snackbar id="snackbar"/>
		<local:Toggles id="toggles"/>
		<local:Tables id="tables"/>
		<local:TextFields id="textFields"/>
    </mdl:NavigationLayoutContent>
    <fx:Script>
	<![CDATA[
		import vos.NavigationLinkVO;
		import org.apache.royale.mdl.TabBarPanel;


		private function onNavigationChange(event:Event):void
		{
			var navigationVO:NavigationLinkVO = event.currentTarget.selectedItem as NavigationLinkVO;
			var elementsCount:int = content.numElements;
			for (var i:int = 0; i < elementsCount; i++)
			{
				var view:TabBarPanel = content.getElementAt(i) as TabBarPanel;
				if (view.id == navigationVO.id)
				{
					view.isActive = true;
				}
				else
				{
					view.isActive = false;
				}
			}
		}
	]]>
</fx:Script>
</mdl:NavigationLayout>
