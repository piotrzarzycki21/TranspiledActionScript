<mdl:TabBarPanel xmlns:fx="http://ns.adobe.com/mxml/2009"
                 xmlns:js="library://ns.apache.org/royale/basic"
                 xmlns:mdl="library://ns.apache.org/royale/mdl"
                 xmlns:html="library://ns.apache.org/royale/html"
                 xmlns="http://www.w3.org/1999/xhtml" xmlns:components="components.*">

    <fx:Script>
        <![CDATA[
            import org.apache.royale.mdl.materialIcons.MaterialIconType;
        ]]>
	</fx:Script>

    <mdl:beads>
        <js:ContainerDataBinding/>
    </mdl:beads>
	<mdl:Grid percentWidth="100">
		<mdl:GridCell column="12">
			<mdl:Card percentWidth="100">
				<mdl:CardTitle>
					<mdl:CardTitleText text="Wide card with share menu button"/>
				</mdl:CardTitle>
			    <mdl:Grid percentWidth="100" percentHeight="100">
			  		<mdl:GridCell column="12">
						<mdl:Card className="demo-card-wide" shadow="2">
			                <mdl:CardTitle expand="true">
			                    <mdl:CardTitleText text="Welcome"/>
			                </mdl:CardTitle>
			                <mdl:CardSupportingText>
			                    <mdl:beads>
			                        <html:InnerHTML>
			                            <![CDATA[Lorem ipsum dolor sit <b>amet</b>, consectetur <i>adipiscing elit</i>. Mauris sagittis pellentesque lacus eleifend lacinia...]]>
			                        </html:InnerHTML>
			                    </mdl:beads>
			                </mdl:CardSupportingText>
			                <mdl:CardActions border="true">
			                    <mdl:Button text="Get Started" ripple="true" colored="true"/>
			                </mdl:CardActions>
			                <mdl:CardMenu>
			                    <mdl:Button icon="true" ripple="true">
			                        <mdl:materialIcon>
			                            <mdl:MaterialIcon text="{MaterialIconType.SHARE}"/>
			                        </mdl:materialIcon>
			                    </mdl:Button>
			                </mdl:CardMenu>
			            </mdl:Card>
					</mdl:GridCell>
					<mdl:GridCell column="6">
						<components:SnippetBox languages="xml" percentWidth="100" percentHeight="100"
											   link="https://raw.githubusercontent.com/piotrzarzycki21/TranspiledActionScript/snippets/Snippets/MDLExample/MXML/Cards/CardWide.mxml"/>
					</mdl:GridCell>
					<mdl:GridCell column="6">
						<components:SnippetBox languages="html" percentWidth="100" percentHeight="100"
											   link="https://raw.githubusercontent.com/piotrzarzycki21/TranspiledActionScript/snippets/Snippets/MDLExample/HTML/Cards/CardWide.html"/>
					</mdl:GridCell>
			    </mdl:Grid>
			</mdl:Card>
		</mdl:GridCell>
		<mdl:GridCell column="12">
			<mdl:Card percentWidth="100">
				<mdl:CardTitle>
					<mdl:CardTitleText text="Square card"/>
				</mdl:CardTitle>
			    <mdl:Grid percentWidth="100" percentHeight="100">
			  		<mdl:GridCell column="12">
						<mdl:Card className="demo-card-square" shadow="2">
			                <mdl:CardTitle expand="true">
			                    <mdl:CardTitleText text="Update"/>
			                </mdl:CardTitle>
			                <mdl:CardSupportingText>
			                    <html:TextNode text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenan convallis."/>
			                </mdl:CardSupportingText>
			                <mdl:CardActions border="true">
			                    <mdl:Button colored="true" ripple="true" text="View Updates"/>
			                </mdl:CardActions>
			            </mdl:Card>
					</mdl:GridCell>
					<mdl:GridCell column="6">
						<components:SnippetBox languages="xml" percentWidth="100" percentHeight="100"
											   link="https://raw.githubusercontent.com/piotrzarzycki21/TranspiledActionScript/snippets/Snippets/MDLExample/MXML/Cards/CardSquare.mxml"/>
					</mdl:GridCell>
					<mdl:GridCell column="6">
						<components:SnippetBox languages="html" percentWidth="100" percentHeight="100"
											   link="https://raw.githubusercontent.com/piotrzarzycki21/TranspiledActionScript/snippets/Snippets/MDLExample/HTML/Cards/CardSquare.html"/>
					</mdl:GridCell>
			    </mdl:Grid>
			</mdl:Card>
		</mdl:GridCell>
		<mdl:GridCell column="12">
			<mdl:Card percentWidth="100">
				<mdl:CardTitle>
					<mdl:CardTitleText text="Image card"/>
				</mdl:CardTitle>
			    <mdl:Grid percentWidth="100" percentHeight="100">
			  		<mdl:GridCell column="12">
						<mdl:Card width="256" height="256" shadow="2" 
								  style="background: url('resources/assets/image_card.jpg') center / cover">
			                <mdl:CardTitle expand="true"/>
			                <mdl:CardActions style="height: 52px; padding: 16px; background: rgba(0, 0, 0, 0.2);">
			                    <html:Span text="Image.jpg" style="color: #fff; font-size: 14px; font-weight: 500;"/>
			                </mdl:CardActions>
			            </mdl:Card>
					</mdl:GridCell>
					<mdl:GridCell column="6">
						<components:SnippetBox languages="xml" percentWidth="100" percentHeight="100"
											   link="https://raw.githubusercontent.com/piotrzarzycki21/TranspiledActionScript/snippets/Snippets/MDLExample/MXML/Cards/CardImage.mxml"/>
					</mdl:GridCell>
					<mdl:GridCell column="6">
						<components:SnippetBox languages="html" percentWidth="100" percentHeight="100"
											   link="https://raw.githubusercontent.com/piotrzarzycki21/TranspiledActionScript/snippets/Snippets/MDLExample/HTML/Cards/CardImage.html"/>
					</mdl:GridCell>
			    </mdl:Grid>
			</mdl:Card>
		</mdl:GridCell>
		<mdl:GridCell column="12">
			<mdl:Card percentWidth="100">
				<mdl:CardTitle>
					<mdl:CardTitleText text="Event card"/>
				</mdl:CardTitle>
			    <mdl:Grid percentWidth="100" percentHeight="100">
			  		<mdl:GridCell column="12">
						<mdl:Card className="demo-card-event" shadow="2">
			                <mdl:CardTitle expand="true">
			                    <mdl:CardTitleText text="Welcome">
			                        <mdl:beads>
			                            <html:InnerHTML>
			                                <![CDATA[<h4>Featured event:<br>May 24, 2016<br>7-11pm</h4>]]>
			                            </html:InnerHTML>
			                        </mdl:beads>
			                    </mdl:CardTitleText>
			                </mdl:CardTitle>
			                <mdl:CardActions border="true">
			                    <mdl:Button colored="true" ripple="true" text="Add to Calendar"/>
			                    <mdl:Spacer/>
			                    <mdl:MaterialIcon text="{MaterialIconType.EVENT}"/>
			                </mdl:CardActions>
			            </mdl:Card>
					</mdl:GridCell>
					<mdl:GridCell column="6">
						<components:SnippetBox languages="xml" percentWidth="100" percentHeight="100"
											   link="https://raw.githubusercontent.com/piotrzarzycki21/TranspiledActionScript/snippets/Snippets/MDLExample/MXML/Cards/CardEvent.mxml"/>
					</mdl:GridCell>
					<mdl:GridCell column="6">
						<components:SnippetBox languages="html" percentWidth="100" percentHeight="100"
											   link="https://raw.githubusercontent.com/piotrzarzycki21/TranspiledActionScript/snippets/Snippets/MDLExample/HTML/Cards/CardEvent.html"/>
					</mdl:GridCell>
			    </mdl:Grid>
			</mdl:Card>
		</mdl:GridCell>
	</mdl:Grid>	
</mdl:TabBarPanel>
