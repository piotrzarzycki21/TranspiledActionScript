<mdl:TabBarPanel xmlns:fx="http://ns.adobe.com/mxml/2009"
                 xmlns:mdl="library://ns.apache.org/royale/mdl"
                 xmlns:js="library://ns.apache.org/royale/basic"
			     xmlns:html="library://ns.apache.org/royale/html"
				 xmlns:components="components.*" >

    <fx:Script>
        <![CDATA[
            private function onShowModalDialog(event:MouseEvent):void
            {
                var dialog:TestDialog = new TestDialog();
                dialog.showModal();
            }
        ]]>
    </fx:Script>
	<mdl:Grid percentWidth="100">
		<mdl:GridCell column="12">
			<mdl:Card percentWidth="100">
				<mdl:CardTitle>
					<mdl:CardTitleText text="Simple Dialog"/>
				</mdl:CardTitle>
			    <mdl:Grid percentWidth="100" percentHeight="100">
			  		<mdl:GridCell column="12">
						<mdl:Button text="Show Modal Dialog" raised="true" click="onShowModalDialog(event)"/>
					</mdl:GridCell>
					<mdl:GridCell column="6">
						<components:SnippetBox languages="xml" percentWidth="100" percentHeight="100"
											   link="https://raw.githubusercontent.com/piotrzarzycki21/TranspiledActionScript/snippets/Snippets/MDLExample/MXML/Dialogs/DialogSimple.mxml"/>
					</mdl:GridCell>
					<mdl:GridCell column="6">
						<components:SnippetBox languages="html" percentWidth="100" percentHeight="100"
											   link="https://raw.githubusercontent.com/piotrzarzycki21/TranspiledActionScript/snippets/Snippets/MDLExample/HTML/Dialogs/DialogSimple.html"/>
					</mdl:GridCell>
			    </mdl:Grid>
			</mdl:Card>
		</mdl:GridCell>
	</mdl:Grid>	
</mdl:TabBarPanel>
