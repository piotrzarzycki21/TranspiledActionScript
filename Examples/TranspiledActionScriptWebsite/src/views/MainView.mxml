<mdl:NavigationLayout xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:js="library://ns.apache.org/flexjs/basic" 
					  xmlns:mdl="library://ns.apache.org/flexjs/mdl" 
					  xmlns:models="models.*" xmlns:views="views.*" 
					  currentState="Examples"					>
	<mdl:states>
		<js:State name="Examples" stateGroups="all"/>
		<js:State name="Snippets" stateGroups="all"/>	
		<js:State name="About" stateGroups="all"/>
	</mdl:states>						
	<mdl:Header>
		<mdl:HeaderRow>
			<mdl:Navigation>
				<mdl:NavigationLink text="Examples" includeIn="all"
									click="onExamplesLinkClick(event)"/>
				<mdl:NavigationLink text="Snippets" includeIn="all"
									click="onSnippetsLinkClick(event)"/>
				<mdl:NavigationLink text="GitHub" href="https://github.com/piotrzarzycki21/TranspiledActionScript" 
									includeIn="all"/>
				<mdl:NavigationLink text="Patreon" href="https://www.patreon.com/"
									includeIn="all"/>
				<mdl:NavigationLink text="About" includeIn="all"
									click="onAboutLinkClick(event)"/>
			</mdl:Navigation>
		</mdl:HeaderRow>
	</mdl:Header>		
	<mdl:NavigationLayoutContent>
		<views:ExamplesView includeIn="Examples"/>
		<views:SnippetsView includeIn="Snippets"/>
		<views:AboutView includeIn="About"/>
		
		<mdl:Footer mini="true">
			<mdl:FooterLeftSection>
			</mdl:FooterLeftSection>
			<mdl:FooterRightSection>
			</mdl:FooterRightSection>
		</mdl:Footer>
    </mdl:NavigationLayoutContent>	
	<fx:Script>
	<![CDATA[
		import org.apache.flex.events.MouseEvent;

		private function onExamplesLinkClick(event:MouseEvent):void
		{
			currentState = "Examples";
		}
		
		private function onSnippetsLinkClick(event:MouseEvent):void
		{
			currentState = "Snippets";
		}
		
		private function onAboutLinkClick(event:MouseEvent):void
		{
			currentState = "About";
		}
	]]>
</fx:Script>
</mdl:NavigationLayout>