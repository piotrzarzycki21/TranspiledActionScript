<?xml version="1.0" encoding="utf-8"?>
<mdl:FooterLinkItemMouseRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
			  					 xmlns:js="library://ns.apache.org/royale/basic"
			  					 xmlns:mdl="library://ns.apache.org/royale/mdl">
	
	<mdl:style>
		<js:AllCSSStyles fontFamily="Poppins" color="#FFFFFF" marginRight="30"/>
	</mdl:style>		
	<fx:Script>
	<![CDATA[
		override public function set data(value:Object):void
		{
			super.data = value;
		
			if (value && !value.href)
			{
				element.style["color"] = "#696969";
			}	
		}		

		override public function updateRenderer():void
		{
			if (data && !data.href) return;
			
			if (hovered)
			{
				element.style["textDecorationLine"] = "underline";
				element.style["textDecorationColor"] = "#d52d28";
			}
			else
			{
				element.style["textDecorationLine"] = "none";			
			}
		}
	]]>
	</fx:Script>
</mdl:FooterLinkItemMouseRenderer>